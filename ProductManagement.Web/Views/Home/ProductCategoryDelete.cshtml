@using ProductManagement.Service.DTOs.Products;
@model ProductCategoryForResultDto

<h2>Delete Product</h2>

<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>

        <dt class="col-sm-2">
            ProductId
        </dt>
        <dd class="col-sm-10">            
            @Model.ProductId
        </dd>

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryId
        </dd>
    </dl>
</div>

@using (Html.BeginForm("ProductCategoryDeleteConfirmed", "Home", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <p>Are you sure you want to delete this product?</p>

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: blue; color: white;">Cancel</a>

}